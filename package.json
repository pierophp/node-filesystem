{
  "name": "node-filesystem",
  "version": "0.0.29",
  "description": "A node filesystem manager",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./src/adapters/local.adapter": {
      "require": "./dist/adapters/local.adapter.js",
      "import": "./dist/adapters/local.adapter.js",
      "types": "./dist/adapters/local.adapter.d.ts"
    },
    "./src/adapters/s3.adapter": {
      "require": "./dist/adapters/s3.adapter.js",
      "import": "./dist/adapters/s3.adapter.js",
      "types": "./dist/adapters/s3.adapter.d.ts"
    },
    "./src/adapters/bun.adapter": {
      "require": "./dist/adapters/bun.adapter.js",
      "import": "./dist/adapters/bun.adapter.js",
      "types": "./dist/adapters/bun.adapter.d.ts"
    },
    "./src/adapters/bun.local.adapter": {
      "require": "./dist/adapters/bun.local.adapter.js",
      "import": "./dist/adapters/bun.local.adapter.js",
      "types": "./dist/adapters/bun.local.adapter.d.ts"
    },
    "./src/adapters/google.storage.adapter": {
      "require": "./dist/adapters/google.storage.adapter.js",
      "import": "./dist/adapters/google.storage.adapter.js",
      "types": "./dist/adapters/google.storage.adapter.d.ts"
    },
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist"
  ],
  "repository": "git@github.com:beautybrands/node-filesystem.git",
  "author": "Piero Giusti <pierophp@gmail.com>",
  "license": "MIT",
  "keywords": [
    "node",
    "file",
    "filesystem",
    "s3",
    "flysystem"
  ],
  "engines": {
    "node": ">=24.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "test:clear": "clear &&  bun test",
    "test:watch": "bun test --watch",
    "npm:publish": "yarn build && npm publish",
    "coverage": "cd coverage && python -m SimpleHTTPServer 8182"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.679.0",
    "@google-cloud/storage": "^6.4.1",
    "fs-extra": "^4.0.3",
    "lodash-es": "^4.17.21",
    "mime": "^2.3.1",
    "node-dir": "^0.1.17"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "@types/chai": "^4.0.5",
    "@types/mocha": "^2.2.44",
    "@types/node": "^18.7.6",
    "chai": "^4.2.0",
    "mocha": "^6.0.2",
    "nodemon": "^2.0.19",
    "nyc": "^11.3.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^2.4.0",
    "tslint": "^5.8.0",
    "typescript": "^5.9.3"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "docker"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "lcovonly",
      "text-summary"
    ],
    "all": true
  }
}
